<Window x:Class="VirtualClassroom.AdminClient.AddSubjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Subject" SizeToContent="WidthAndHeight"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Grid>
        <StackPanel>
            <WrapPanel Margin="10">
                <Label>Name: </Label>
                <TextBox x:Name="txtName" Width="120" Margin="10 0 0 0"/>
            </WrapPanel>
            <WrapPanel Margin="10">
                <Label>Teacher: </Label>
                <ComboBox x:Name="comboTeachers" SelectedIndex="0" Margin="10 0 0 0">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <WrapPanel>
                                <Label Content="{Binding Path=FirstName}" />
                                <Label Content="{Binding Path=LastName}" />
                            </WrapPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </WrapPanel>
            <WrapPanel Margin="10" HorizontalAlignment="Right">
                <Button x:Name="btnAdd" Click="btnAdd_Click" Margin="10" >Add</Button>
                <Button x:Name="btnCancel" Click="btnCancel_Click" Margin="10" >Cencel</Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
