<Window x:Class="VirtualClassroom.AdminClient.AddToSubjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Add to Subject" SizeToContent="WidthAndHeight"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Grid>
        <StackPanel>
            <WrapPanel Margin="10">
                <Label>Subject: </Label>
                <ComboBox x:Name="comboSubjects" SelectedIndex="0" Margin="10 0 0 0" >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <Label Content="{Binding Path=Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Right">
                <Button x:Name="btnAdd" Click="btnAdd_Click" Margin="10" >Add</Button>
                <Button x:Name="btnCancel" Click="btnCancel_Click" Margin="10" >Cancel</Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
