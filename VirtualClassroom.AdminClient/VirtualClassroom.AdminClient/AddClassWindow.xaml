<Window x:Class="VirtualClassroom.AdminClient.AddClassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Class" SizeToContent="WidthAndHeight"
        Background="{DynamicResource WindowBackgroundBrush}">
    <Grid>
        <StackPanel>
            <WrapPanel Margin="10">
                <Label>Number: </Label>
                <TextBox x:Name="txtNumber" Width="100" />
            </WrapPanel>
            <WrapPanel Margin="10">
                <Label>Letter: </Label>
                <TextBox x:Name="txtLetter" Width="100" />
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Right">
                <Button x:Name="btnAdd" Margin="10" Click="btnAdd_Click">Add</Button>
                <Button x:Name="btnCancel" Margin="10" Click="btnCancel_Click" >Cancel</Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
