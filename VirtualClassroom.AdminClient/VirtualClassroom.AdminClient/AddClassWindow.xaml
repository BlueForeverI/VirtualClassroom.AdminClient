<Window x:Class="VirtualClassroom.AdminClient.AddClassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавяне на клас" SizeToContent="WidthAndHeight"
        Background="{DynamicResource WindowBackgroundBrush}" ResizeMode="NoResize" Topmost="True" 
        WindowStartupLocation="CenterScreen" ShowInTaskbar="False">
    <Grid>
        <StackPanel>
            <WrapPanel Margin="10">
                <Label>Клас: </Label>
                <TextBox x:Name="txtNumber" Width="100"  Margin="10 0 0 0"/>
            </WrapPanel>
            <WrapPanel Margin="10">
                <Label>Паралелка: </Label>
                <TextBox x:Name="txtLetter" Width="100"  Margin="10 0 0 0"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Right">
                <Button x:Name="btnAdd" Margin="10" Click="btnAdd_Click" Padding="5">Добави</Button>
                <Button x:Name="btnCancel" Margin="10" Click="btnCancel_Click" Padding="5">Отказ</Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
