<Page x:Class="VirtualClassroom.AdminClient.ManageStudentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Height="auto" Width="auto"
	  Title="Manage Students">

    <Grid>
        <GroupBox Header="Students" Padding="5 10 10 10" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <DataGrid x:Name="dataGridStudents" AutoGenerateColumns="False" Margin="0 0 10 0"
                          VerticalScrollBarVisibility="Auto" MaxHeight="600">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Username" Binding="{Binding Path=Username}" />
                        <DataGridTextColumn Header="Full Name" Binding="{Binding Path=FullName}" />
                        <DataGridTextColumn Header="EGN" Binding="{Binding Path=EGN}" />
                        <DataGridTextColumn Header="Class" Binding="{Binding Path=Class}" />
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel>
                    <Button x:Name="btnAddStudent" Click="btnAddStudent_Click">Add Student</Button>
                    <Button x:Name="btnRemoveStudent" Click="btnRemoveStudent_Click">Remove Students</Button>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
