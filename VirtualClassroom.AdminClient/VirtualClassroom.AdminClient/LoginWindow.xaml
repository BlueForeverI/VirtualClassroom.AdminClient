<Window x:Class="VirtualClassroom.AdminClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" SizeToContent="WidthAndHeight"
        Background="{DynamicResource WindowBackgroundBrush}" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Topmost="True">
    <Grid>
        <xctk:BusyIndicator x:Name="busyIndicator" IsBusy="False">
            <StackPanel>
                <WrapPanel Margin="10">
                    <Label>Username:</Label>
                    <TextBox x:Name="txtUsername" Width="150" />
                </WrapPanel>
                <WrapPanel Margin="10">
                    <Label>Password:</Label>
                    <PasswordBox x:Name="txtPassword" Width="150" />
                </WrapPanel>
                <WrapPanel HorizontalAlignment="Right">
                    <Button x:Name="btnLogin" Click="btnLogin_Click"  Margin="10" Padding="5" >Login</Button>
                    <Button x:Name="btnCancel" Click="btnCancel_Click"  Margin="10" Padding="5">Cancel</Button>
                </WrapPanel>
            </StackPanel>
        </xctk:BusyIndicator>
    </Grid>
</Window>
